<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/tight_height_size"
        android:background="@color/icon_green"
        android:orientation="horizontal">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:id="@+id/zurve_change_goback"
            android:text="@string/goback"
            android:textSize="@dimen/top_tab_font_size"
            android:textColor="@color/white"
            android:background="@android:color/transparent"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/qxbh"
            android:textColor="@color/white"
            android:textSize="@dimen/top_tab_font_size"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="@string/goback"
            android:textSize="@dimen/top_tab_font_size"
            android:textColor="@color/icon_green"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="50dp" 
        android:background="@color/icon_green"
        android:orientation="vertical"
        android:gravity="center">
        <RadioGroup android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/zurve_change_radio_group_time" android:background="@android:color/transparent" android:layout_width="342dp" android:layout_height="36dp">
        
        <RadioButton android:id="@+id/zurve_change_radio_hour" 
            android:background="@drawable/spot_rank_hour_selector" 
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"/>
        
        <RadioButton android:id="@+id/zurve_change_radio_day" 
            android:background="@drawable/spot_rank_day_selector" 
            android:layout_weight="1"
            android:button="@null"/>
        
        <RadioButton android:id="@+id/zurve_change_radio_month" 
            android:background="@drawable/spot_rank_month_selector" 
            android:layout_weight="1"
            android:button="@null"/>
        
    </RadioGroup>
    </LinearLayout>
    
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/wuhan_blue"
        android:id="@+id/zurve_change_tv_chart_title"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/zurve_change_layout">
        
    </LinearLayout>
    
</LinearLayout>
