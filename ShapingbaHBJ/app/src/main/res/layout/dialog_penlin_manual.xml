<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <Button android:id="@+id/penlin_dialog_bt_open"
            android:layout_width="@dimen/jcxq_pic_size"
            android:layout_height="@dimen/jcxq_pic_size"
            android:background="@drawable/penlin_open"/>
        <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/jcxq_text_size2"
                android:gravity="center"
                android:text="开启"
                android:textColor="@color/icon_grey"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <Button android:id="@+id/penlin_dialog_bt_close"
            android:layout_width="@dimen/jcxq_pic_size"
            android:layout_height="@dimen/jcxq_pic_size"
            android:background="@drawable/penlin_close"/>
        <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/jcxq_text_size2"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/icon_grey"/>
    </LinearLayout>

</LinearLayout>
