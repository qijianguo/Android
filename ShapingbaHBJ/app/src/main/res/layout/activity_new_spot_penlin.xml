<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/new_spot_details_banner">
        
        <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="@dimen/tight_height_size"
	        android:background="@android:color/transparent" 
	        android:orientation="horizontal">
	        <Button android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="12dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:gravity="left"
	            android:id="@+id/penlin_goback"
	            android:text="@string/goback"
	            android:textSize="@dimen/top_tab_font_size"
	            android:textColor="@color/white"
	            android:background="@android:color/transparent"/>
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="监测点信息"
	            android:textColor="@color/white"
	            android:textSize="@dimen/top_tab_font_size"/>
	        <Button android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="12dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="8dp"
	            android:gravity="right"
	            android:text=""
	            android:textSize="@dimen/top_tab_font_size"
	            android:textColor="@color/icon_blue"
	            android:background="@android:color/transparent"/>
	    </LinearLayout>
	    
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="30dp"
         	android:layout_marginTop="2dp"
         	android:layout_marginLeft="20dp"
         	android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"                
                android:src="@drawable/jcxq_spot"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="@dimen/jcxq_text_size1"
                android:textColor="@color/white"
                android:text="null"
                android:id="@+id/penlin_tv_spot"/>
        </LinearLayout>
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="30dp"
         	android:layout_marginTop="2dp"
         	android:layout_marginLeft="20dp"
         	android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"                
                android:src="@drawable/jcxq_address"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="@dimen/jcxq_text_size1"
                android:textColor="@color/white"
                android:text="null"
                android:id="@+id/penlin_tv_address"/>
        </LinearLayout>
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="30dp"
         	android:layout_marginTop="2dp"
         	android:layout_marginLeft="20dp"
         	android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"                
                android:src="@drawable/jcxq_latlng"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="@dimen/jcxq_text_size1"
                android:textColor="@color/white"
                android:text="null"
                android:id="@+id/penlin_tv_latlng"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 喷淋设备1 -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/xqx_green"
        android:id="@+id/penlin_layout_1">
        
        <LinearLayout android:layout_weight="1"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="90dp">
            <Button android:layout_width="@dimen/jcxq_pic_size"
                android:layout_height="@dimen/jcxq_pic_size"
                android:id="@+id/penlin_bt_manual1"
                android:background="@drawable/penlin_manual_mode"/>
            <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/jcxq_text_size2"
                android:gravity="center"
                android:text="手动模式"
                android:textColor="@color/icon_grey"/>
        </LinearLayout>
        
        <LinearLayout android:layout_weight="6"
            android:layout_height="90dp"
            android:layout_width="0dp"
            android:orientation="vertical">
            <TextView android:layout_width="fill_parent"
		        android:layout_height="19dp"
		        android:gravity="center"
		        android:id="@+id/penlin_tv_device_name1"
		        android:text="设备名称"
		        android:textSize="13sp"
		        android:textColor="@color/icon_grey"/>
            
            <TextView android:layout_width="fill_parent"
		        android:layout_height="19dp"
		        android:gravity="center"
		        android:id="@+id/penlin_tv_start_time1"
		        android:text="开启时间"
		        android:textSize="13sp"
		        android:textColor="@color/icon_grey"/>
		    
		    <TextView android:layout_width="fill_parent"
		        android:layout_height="19dp"
		        android:gravity="center"
		        android:id="@+id/penlin_tv_end_time1"
		        android:text="关闭时间"
		        android:textSize="13sp"
		        android:textColor="@color/icon_grey"/>
		    
		    <TextView android:layout_width="fill_parent"
		        android:layout_height="33dp"
		        android:gravity="center"
		        android:id="@+id/penlin_tv_time_length1"
		        android:text="喷淋时长"
		        android:textSize="13sp"
		        android:textColor="@color/icon_grey"/>
        </LinearLayout>
        
        <LinearLayout android:layout_weight="1"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="90dp">
            <Button android:layout_width="@dimen/jcxq_pic_size"
                android:layout_height="@dimen/jcxq_pic_size"
                android:id="@+id/penlin_bt_automatic1"
                android:background="@drawable/penlin_automatic_mode"/>
            <TextView android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/jcxq_text_size2"
                android:gravity="center"
                android:text="自动模式"
                android:textColor="@color/icon_grey"/>
        </LinearLayout>
        
    </LinearLayout>
    
