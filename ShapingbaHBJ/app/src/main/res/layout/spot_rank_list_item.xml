<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView android:layout_width="10dp"
	    android:layout_height="fill_parent"
	    android:background="@color/icon_blue"
	    android:gravity="center"
	    android:id="@+id/spot_rank_lv_tv_provider"/>

    <TextView android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:id="@+id/spot_rank_lv_tv_rank"
        android:textColor="@color/icon_green"
        android:textSize="16sp"
        android:text="排名"/>
    <TextView android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:id="@+id/spot_rank_lv_tv_district"
        android:textColor="@color/icon_green"
        android:textSize="16sp"
        android:text="区县名"/>
    <TextView android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:id="@+id/spot_rank_lv_tv_csite"
        android:textColor="@color/icon_green"
        android:textSize="16sp"
        android:text="监测点"/>
    <TextView android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:gravity="center"
        android:id="@+id/spot_rank_lv_tv_pm10"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="PM10浓度\↑↓\n(μg/m³)"/>
</LinearLayout>
