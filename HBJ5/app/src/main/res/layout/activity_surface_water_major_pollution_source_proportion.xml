<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/tight_height_size"
        android:background="@color/icon_blue"
        android:orientation="horizontal">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:id="@+id/surface_water_major_pollution_source_proportion_goback"
            android:text="@string/goback"
            android:textSize="@dimen/top_tab_font_size"
            android:textColor="@color/white"
            android:background="@android:color/transparent"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="地表水主要污染源占比情况"
            android:textColor="@color/white"
            android:textSize="@dimen/top_tab_font_size"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:text="@string/goback"
            android:textSize="@dimen/top_tab_font_size"
            android:textColor="@color/icon_blue"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/xuanzekaishiriqi"/>
        <EditText android:layout_width="120dp"
        	android:layout_height="wrap_content"
        	android:hint="@string/kaishiriqi"
        	android:textSize="16sp"
        	android:id="@+id/surface_water_major_pollution_source_proportion_start_time"/>
        <Button android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:text="@string/query"
        	android:textColor="@color/white"
        	android:textSize="@dimen/login_button_textsize"
        	android:id="@+id/surface_water_major_pollution_source_proportion_query"
        	android:background="@drawable/login_bt_border"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/jiancedidian"/>
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surface_water_major_pollution_source_proportion_spot_spinner"/>
    </LinearLayout>

   	<LinearLayout android:layout_width="fill_parent"
       	android:layout_height="fill_parent"
       	android:layout_marginTop="30dp"
       	android:orientation="vertical"
       	android:id="@+id/surface_water_major_pollution_source_proportion_layout">
   	</LinearLayout>
    
</LinearLayout>
